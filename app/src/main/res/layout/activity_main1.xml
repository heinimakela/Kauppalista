<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Scroll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center_vertical"
    tools:context=".MainActivity1"
    tools:viewBindingIgnore="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="fill_vertical"
        tools:context=".MainActivity1"
        tools:viewBindingIgnore="true" >

        <androidx.appcompat.widget.AppCompatButton
            android:layout_marginTop="10px"
            android:layout_marginBottom="10px"
            android:background="@drawable/big_button_border"
            android:id="@+id/button0"
            android:layout_width="330dp"
            android:layout_height="110dp"
            android:layout_gravity="center_horizontal"
            android:text="VALITSE RESEPTIT
            JA TUOTTEET"
            android:textSize="32dp"
            android:clickable="false"
            android:textColor="@color/white"/>
        <Button
            android:id="@+id/button1"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Tofuwokki"
            android:backgroundTint="@color/androidpurple"/>
        <Button
            android:id="@+id/button2"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:text="Linssicurry"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/androidpurple"/>
        <Button
            android:id="@+id/button3"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:text="Palak paneer"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/androidpurple"/>
        <Button
            android:id="@+id/button4"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:text="Kikherne tikka masala"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/androidpurple"/>
        <Button
            android:id="@+id/button5"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:text="Nakkikastike perunalla"
            android:layout_gravity="center_horizontal"/>
        <Button
            android:id="@+id/button6"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:text="Mustapapupyörykät pastalla"
            android:layout_gravity="center_horizontal" />
        <Button
            android:id="@+id/button7"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:text="Vegepyttipannu"
            android:layout_gravity="center_horizontal" />
        <Button
            android:id="@+id/button8"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:text="Quesadillat"
            android:layout_gravity="center_horizontal"/>
        <Button
            android:id="@+id/button9"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:text="Linssitacot"
            android:layout_gravity="center_horizontal" />
        <Button
            android:id="@+id/button10"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:text="Tofutortillat"
            android:layout_gravity="center_horizontal" />
        <Button
            android:id="@+id/button11"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:text="Kaurahiutaleet"
            android:layout_gravity="center_horizontal" />
        <Button
            android:id="@+id/button12"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:text="Smoothiehedelmät"
            android:layout_gravity="center_horizontal" />
        <Button
            android:id="@+id/button13"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:text="Alpro"
            android:layout_gravity="center_horizontal" />
        <Button
            android:id="@+id/button14"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:text="Puolukka"
            android:layout_gravity="center_horizontal" />
        <Button
            android:id="@+id/button15"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Leipä" />
        <Button
            android:id="@+id/button16"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Hummus" />
        <Button
            android:id="@+id/button17"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:text="Pähkinä"
            android:layout_gravity="center_horizontal" />
        <Button
            android:id="@+id/button18"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:text="Vessapaperi"
            android:layout_gravity="center_horizontal" />
        <Button
            android:id="@+id/button19"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:text="Pyykinpesuaine"
            android:layout_gravity="center_horizontal" />
        <Button
            android:id="@+id/button20"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:text="Shampoo"
            android:layout_gravity="center_horizontal" />

        <LinearLayout
            android:layout_marginTop="8px"
            android:layout_marginBottom="8px"
            android:layout_width="330dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:background="@drawable/big_button_border_2">

            <EditText
                android:id="@+id/textbox1"
                android:layout_width="270dp"
                android:layout_height="42dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30px"
                android:layout_marginBottom="10px"
                android:background="@drawable/button_border"
                android:hint="Kirjoita tähän omavalintainen tuote"
                android:inputType="text|textNoSuggestions"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textCursorDrawable="@color/white"
                android:textSize="15sp" />
            <Button
                android:id="@+id/button21"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Syötä"
                android:backgroundTint="@color/androidpurplelittlelighter"/>
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_marginTop="12px"
            android:layout_marginBottom="12px"
            android:id="@+id/button22"
            android:background="@drawable/big_button_border"
            android:layout_width="330dp"
            android:layout_height="110dp"
            android:text="MUODOSTA KAUPPALISTA"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="32dp"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>

</ScrollView>